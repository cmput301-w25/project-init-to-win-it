            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="720dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#D7D2CC"
            android:text="Next"
