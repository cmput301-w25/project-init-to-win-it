        <TextView
            android:id="@+id/add_desc"
            android:layout_width="230dp"
            android:layout_height="31dp"
            android:layout_below="@+id/horizontal_spinner"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="187dp"
            android:gravity="top"
            android:text="@string/add_your_de"
            android:textAppearance="@style/add_your_de"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/add_desc"
            android:layout_marginStart="36dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/newfrosted"
            android:hint="Enter your description here"
            android:padding="16dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="306dp"
            android:layout_height="163dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rectangle_2" />

        <ImageView
            android:id="@+id/photos"
            android:layout_width="61dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="181dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/photos" />

        <TextView
