<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="#FBF0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Enhanced Post Header with Status Indicator -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person_black_24dp"
                app:shapeAppearanceOverlay="@style/CircleImageView"
                android:scaleType="centerCrop"
                android:elevation="1dp"/>

            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_shape"
                android:layout_alignRight="@id/profile_image_edit"
                android:layout_alignBottom="@id/profile_image_edit"
                android:backgroundTint="#4CAF50"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/profile_image_edit"
                android:layout_toStartOf="@id/details_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textColor="#757575"
                    android:textSize="12sp"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/details_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="4dp"
                android:textColor="#3F51B5"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp" />
        </RelativeLayout>

        <!-- Mood Tag Banner - ENHANCED SIZE -->
        <LinearLayout
            android:id="@+id/mood_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E8F5E9"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/mood_emoji"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mood_black_24dp"
                app:tint="#4CAF50"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/mood_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy"
                android:textColor="#1B5E20"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- Post Image with less rounding and larger size -->
        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="Post Image"
            android:background="@drawable/ic_image_black_24dp"/>

        <!-- Enhanced Post Actions with Material Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/comment_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_comment_black_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Comment"
                    app:tint="#757575"
                    android:padding="4dp"/>

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Small Music Player -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/song_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Song Title"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <SeekBar
                    android:id="@+id/music_seekbar"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:progressTint="#3F51B5"
                    android:thumbTint="#3F51B5"
                    android:maxHeight="2dp"/>

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Play music"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#3F51B5" />
            </LinearLayout>
        </LinearLayout>

        <!-- Trigger Info with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#FAFAFA">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_gravity="center_vertical"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trigger: "
                android:textColor="#757575"
                android:textSize="13sp"
                android:layout_marginStart="6dp" />
            <TextView
                android:id="@+id/trigger_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Post Caption with less rounded background -->
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="This is a sample post caption that describes how I'm feeling today. #MoodSync"
            android:textColor="#000000"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:background="#FFFFFF"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
