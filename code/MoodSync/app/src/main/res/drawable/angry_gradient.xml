<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#203434" />
        </shape>
    </item>
    <!-- Bottom to top gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#C53F3F"
                android:endColor="#203434"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
</layer-list>
