<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#5F9A9A" />

    <!-- Border color and thickness -->
    <stroke android:width="2dp" android:color="#66CCCC" /> <!-- Change border color -->

    <!-- Rounded corners -->
    <corners android:radius="20dp" /> <!-- Adjust radius as needed -->

    <!-- Padding (optional) -->
    <padding android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
