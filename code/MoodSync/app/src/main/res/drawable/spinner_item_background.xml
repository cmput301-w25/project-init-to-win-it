<!-- spinner_item_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F3F1C7" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="#F3F1C7" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F3F1C7" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
